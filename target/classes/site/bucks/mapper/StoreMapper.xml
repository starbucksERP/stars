<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 사용 테이블 : 지점테이블, 점주테이블 -->
<mapper namespace="site.bucks.mapper.StoreMapper">
	<!-- 지점 등록(관리자만) -->
	<insert id="insertStore">
		insert into STORE values(concat(store_seq.nextval,SUBSTR(#{storePhone},0,3)),#{storeName},#{storeAddress},#{storeOwner},#{storePhone},1,sysdate)
	</insert>
	
	<!-- 지점 폐점->지점 -->
	<update id="closeStore" parameterType="int">
		update STORE set store_state=9 where store_id=#{storeId}
	</update>
	
	<!-- 지점 수정(관리자 및 각 지점주 -->
	<update id="updateStore">
		update STORE set store_address=#{storeAddress},store_phone=#{storePhone} where store_id=#{storeId}
	</update>
	
	 
	<!-- 코드로 지점 검색	=> 외부에서 사용하시오. -->
	<select id="selectstoreId" resultType="Store" parameterType="int">
		select * from STORE where store_id=#{storeId}
	</select>
	
	<!-- 지점명으로 지점 검색	=> 외부에서 사용하시오. -->
	<select id="selectStoreName" resultType="Store" parameterType="string">
		select * from STORE where store_name like '%'||#{storeName}||'%'
	</select>
	
	<!-- 전체 지점 조건별 검색 -->
	<select id="selectAllStore" resultType="Store">
		select * from STORE 
		<where>
			<if test="storeId!=null and storeId!=''">
				store_id=#{storeId}
			</if>
			<if test="storeName!=null and storeName!=''">
				store_name like '%'||#{storeName}||'%'
			</if>				
			<if test="storeAddress!=null and storeAddress!=''">
				store_address like '%'||#{storeAddress}||'%'
			</if>				
			<if test="storeName!=null and storeName!=''">
				store_name like '%'||#{storeName}||'%'
			</if>	
			<if test="storeOwner!=null and storeOwner!=''">
				store_owner like '%'||#{storeOwner}||'%'
			</if>				
			<if test="storeState!=null and storeState!=''">
				store_state=#{storeState}
			</if>				
		</where>
		order by store_state, store_open
	</select>
	
</mapper>